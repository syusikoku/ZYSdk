<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RatioLayout">
        <attr name="ratio" format="float"/>
    </declare-styleable>

    <declare-styleable name="MenuWidget">
        <attr name="Title" format="string"/>
        <attr name="TitleTextColor" format="color|reference"/>
        <attr name="TitleTextSize" format="dimension|integer"/>
        <attr name="SubTitle" format="string"/>
        <attr name="SubTitleTextColor" format="color|reference"/>
        <attr name="SubTitleTextSize" format="dimension|integer"/>
        <attr name="showLeftIcon" format="boolean"/>
        <attr name="hideSubTitle" format="boolean"/>
        <attr name="showDivider2" format="boolean"/>
        <attr name="showExtMsg" format="boolean"/>
        <attr name="showTvMore" format="boolean"/>
        <attr name="showCheckbox" format="boolean"/>
        <attr name="leftIconRes" format="reference"/>
        <attr name="extMsgStr" format="string"/>
        <attr name="tvMoreStr" format="string"/>
        <attr name="cbBgRes" format="reference"/>
        <attr name="showMoreIcon" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CommonToolbar">
        <attr name="ToolbarTitle" format="string|reference"/>
        <attr name="ToolbarTitleTextColor" format="color|reference"/>
        <attr name="ToolbarEmTitle" format="string|reference"/>
        <attr name="ToolbarShowEmTitle" format="boolean"/>
        <attr name="ToolbarEmTitleTextColor" format="color|reference"/>
        <attr name="ToolbarEmTitleTextSize" format="dimension|integer"/>
        <attr name="ToolbarEmIcon01Res" format="reference"/>
        <attr name="ToolbarShowEmIcon01" format="boolean"/>
        <attr name="ToolbarEmIcon01Size" format="dimension|integer"/>
        <attr name="ToolbarEmIcon02Res" format="reference"/>
        <attr name="ToolbarEmIcon02Size" format="dimension|integer"/>
        <attr name="ToolbarShowEmIcon02" format="boolean"/>
        <attr name="ToolbarHomeIconRes" format="reference"/>
        <attr name="ToolbarShowHomeIcon" format="boolean"/>
        <attr name="ToolbarShowHomeIconSize" format="dimension|integer"/>
    </declare-styleable>
</resources>